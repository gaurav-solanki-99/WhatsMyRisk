<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Textview -->
    <style name="textview" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

<!--    EditText-->
    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="inputType">text</item>
        <item name="android:background">@drawable/et_border_gray</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <!--    EditText-->
    <style name="editTextBox" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/et_box_background</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>

    </style>

<!--    Spinner-->
    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

        <item name= "android:spinnerMode">dropdown</item>
    </style>


    <style name="autoCompleText" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

        <item name= "android:spinnerMode">dropdown</item>
    </style>

<!--    MainHeading-->
    <style name="MainHeading" parent="Widget.AppCompat.TextView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>


<!--    SubHeading-->
    <style name="SubHeading" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="SubHeading2" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>


    <style name="subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <!--    MiniHeading-->
    <style name="MiniHeading" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>







    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->

        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

<!--    <style name="DialogAnimation">-->
<!--        <item name="android:windowEnterAnimation">@anim/slide_down_animation</item>-->
<!--        <item name="android:windowExitAnimation">@anim/slide_down_animation</item>-->
<!--    </style>-->

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:textSize">9dp</item>
    </style>

    <style name="BottomNavigationView.Active">
        <item name="android:textSize">9dp</item>
    </style>

</resources>