<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:paddingTop="15dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
        <include
            android:id="@+id/app_bar"
            layout="@layout/constant_app_bar"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
     
        android:layout_marginTop="25dp"
     
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <TextView
        style="@style/title"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schmidt-Kertzmann"
      

        />

    <TextView
        style="@style/title"
        android:textStyle="normal"
        android:textColor="@color/app_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delhi"
      
        />

    <TextView
        android:text="Incentivie Open-Source E-Services "
        style="@style/SubHeading"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
      
        />


        <TextView
            android:layout_marginTop="20dp"
            style="@style/title"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
          

            />

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/rv_comments"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             android:textColor="@color/black"
           
             android:layout_marginRight="10dp"
             >

         </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_marginTop="20dp"
            style="@style/title"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
          

            />

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
                app:cardElevation="3dp"
              app:cardCornerRadius="15dp"
              android:layout_margin="10dp"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
                  <LinearLayout
                      android:id="@+id/rating_header2"
                      android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:background="@drawable/ic_curve_header"
                      android:weightSum="2"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_weight="0.6"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:padding="15dp"
                           android:text="Rating"
                         android:textAlignment="center"
                          android:textColor="@color/black"/>
                      <TextView
                          android:layout_width="0dp"
                          android:layout_weight="1.4"
                          android:layout_height="wrap_content"
                          android:padding="15dp"
                          android:textAlignment="center"
                          android:text="Number of Review"
                          android:textColor="@color/black"/>

                  </LinearLayout>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="1"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_weight="0.3"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:padding="15dp"
                          style="@style/title"
                          android:textStyle="bold"
                          android:text="1"
                          android:textSize="16sp"
                          android:textColor="@color/black"/>
                      <TextView
                          android:layout_width="0dp"
                          android:layout_weight="0.7"
                          android:layout_height="match_parent"
                          android:padding="15dp"
                          style="@style/title"
                          android:textStyle="bold"
                          android:text="24 Comments"
                          android:textSize="16sp"
                          android:textColor="@color/black"/>

                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="1"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_weight="0.3"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:padding="15dp"
                          style="@style/title"
                          android:textStyle="bold"
                          android:text="2"
                          android:textSize="16sp"
                          android:textColor="@color/black"/>
                      <TextView
                          android:layout_width="0dp"
                          android:layout_weight="0.7"
                          android:layout_height="match_parent"
                          android:padding="15dp"
                          style="@style/title"
                          android:textStyle="bold"
                          android:text="12 Comments"
                          android:textSize="16sp"
                          android:textColor="@color/black"/>

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="1"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_weight="0.3"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:padding="15dp"
                          style="@style/title"
                          android:textStyle="bold"
                          android:text="3"
                          android:textSize="16sp"
                          android:textColor="@color/black"/>
                      <TextView
                          android:layout_width="0dp"
                          android:layout_weight="0.7"
                          android:layout_height="match_parent"
                          android:padding="15dp"
                          style="@style/title"
                          android:textStyle="bold"
                          android:text="4 Comments"
                          android:textSize="16sp"
                          android:textColor="@color/black"/>

                  </LinearLayout>

              </LinearLayout>

          </androidx.cardview.widget.CardView>



        <TextView
            android:layout_marginTop="20dp"
            style="@style/title"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paymaster"
          

            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="3dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/rating_header"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/ic_curve_header"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="Rating"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:textAlignment="center"
                        android:text="Number of Review"
                        android:textColor="@color/black"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        style="@style/title"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:text="Good"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        style="@style/title"
                        android:textStyle="bold"
                        android:text="24 Comments"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        style="@style/title"
                        android:textStyle="bold"
                        android:text="Bad"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        style="@style/title"
                        android:textStyle="bold"
                        android:text="12 Comments"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        style="@style/title"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:text="Worst"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        style="@style/title"
                        android:textStyle="bold"
                        android:text="4 Comments"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginHorizontal="10dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    style="@style/SubHeading2"
                    android:text="Average value :"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="0dp"
                  android:layout_weight="0.4"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  >
                   <ImageView
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/ic_info"
                       app:layout_constraintRight_toRightOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       android:layout_marginRight="15dp"

                       />
              </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_height="match_parent"
            style="@style/SubHeading2"
            android:text="500000 (From 40 Review)"
            android:textSize="16sp"
            android:textStyle="bold"

            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/btn_welcome_process2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_orange_round_button"
            android:text="DOWNLOAD REPORT"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:padding="13dp"
            android:textAlignment="center"
            android:layout_marginTop="15sp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"

            />
    </LinearLayout>
</ScrollView>