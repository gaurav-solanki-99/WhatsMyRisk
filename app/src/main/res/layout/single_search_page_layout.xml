<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal= "25dp"
        android:orientation="vertical">



    <TextView
        android:id="@+id/tv_title"
        style="@style/title"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schmidt-Kertzmann"

        />

    <TextView
        style="@style/title"
        android:textStyle="normal"
        android:textColor="@color/app_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delhi"
        />

    <TextView
        android:text="Incentivie Open-Source E-Service Polarised Tertiary Defination"
        style="@style/SubHeading"
        android:textAlignment="textStart"

        android:textSize="16sp"
        android:fontFamily="@font/poppins_extralight"
        />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:weightSum="2"
          android:orientation="horizontal">
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="20dp"
                  android:src="@drawable/ic_massage" />

              <TextView
                  style="@style/title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="24 Comments"
                  android:layout_marginLeft="10dp"
                  android:textAlignment="textStart"
                  />

          </LinearLayout>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="20dp"
                  android:src="@drawable/ic_start"
                  />

              <TextView
                  style="@style/title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="4.5 /"
                  android:layout_marginLeft="10dp"
                  android:textAlignment="textStart"
                  />

              <TextView
                  android:text="150 Reviews"
                  style="@style/SubHeading"
                  android:textAlignment="textStart"
                  android:textSize="16sp"
                  />


          </LinearLayout>


      </LinearLayout>

        <TextView
            android:id="@+id/btn_view_Details"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="View Details"
            android:textColor="@color/app_color"
            android:textStyle="normal" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#85AEAEA9"
        />


</LinearLayout>